---
import App from "../components/App.tsx";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wildan's Personal Blog</title>
    <meta
      name="description"
      content="Wildan's personal blog sharing insights, projects, and thoughts about technology, software development, and life."
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://gelembungsahabat.github.io/" />

    <!-- Open Graph -->
    <meta property="og:title" content="Wildan's Personal Blog" />
    <meta
      property="og:description"
      content="Wildan's personal blog about technology, software development, and creative projects."
    />
    <meta property="og:url" content="https://gelembungsahabat.github.io/" />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://gelembungsahabat.github.io/images/preview.png"
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Wildan's Personal Blog" />
    <meta
      name="twitter:description"
      content="Wildan's personal blog about technology, software development, and creative projects."
    />
    <meta
      name="twitter:image"
      content="https://gelembungsahabat.github.io/images/preview.png"
    />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <App client:load />
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
  }
  html,
  body {
    color: rgba(255, 255, 255, 0.87);
    background: radial-gradient(
        at 10% 20%,
        rgba(0, 255, 200, 0.2) 0%,
        transparent 60%
      ),
      radial-gradient(at 80% 0%, rgba(0, 180, 255, 0.25) 0%, transparent 70%),
      radial-gradient(at 50% 100%, rgba(255, 0, 200, 0.15) 0%, transparent 60%),
      radial-gradient(at 0% 100%, rgba(255, 200, 0, 0.1) 0%, transparent 70%),
      #0b0d16;
  }
</style>
